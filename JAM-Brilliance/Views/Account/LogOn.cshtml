@using JAM.Brilliance.Models.ViewModels
@model LogOnViewModel
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<div>
    <img src="/content/images/ja/dating1.jpg" width="330" style="float: right; padding: 10px" />

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Inloggningen misslyckades. Kontrollera dina uppgifter och försök igen")
        @Html.AntiForgeryToken()
        <div style="width:50%;">
            <fieldset>
                <legend>Logga in med ditt användarnamn och lösenord.</legend>
                <div class="editor-label">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.UserName, new { autofocus = "" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="editor-label">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <p>
                    <br />
                    <button type="submit">
                        Logga in <i class="fa fa-heart"></i>
                    </button>
                    &nbsp;|&nbsp;@Html.ActionLink("Registrera", "Register")
                    &nbsp;|&nbsp;@Html.ActionLink("Glömt lösenord", "ForgotPassword")
                </p>
            </fieldset>
        </div>
    }
</div>